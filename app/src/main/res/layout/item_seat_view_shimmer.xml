<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    android:layout_gravity="center_horizontal"
    >

    <View
        android:id="@+id/seat1"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:background="@drawable/seat_item_background"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/seat2"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginStart="4dp"
        android:background="@drawable/seat_item_background"
        app:layout_constraintStart_toEndOf="@id/seat1"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/seat3"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginStart="4dp"
        android:background="@drawable/seat_item_background"
        app:layout_constraintStart_toEndOf="@id/seat2"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/seat4"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginStart="45dp"
        android:background="@drawable/seat_item_background"
        app:layout_constraintStart_toEndOf="@id/seat3"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/seat5"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginStart="4dp"
        android:background="@drawable/seat_item_background"
        app:layout_constraintStart_toEndOf="@id/seat4"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/seat6"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginStart="4dp"
        android:background="@drawable/seat_item_background"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/seat5"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
