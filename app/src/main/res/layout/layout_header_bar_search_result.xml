<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="45dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:backgroundTint="@color/md_theme_primaryContainer_highContrast">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ImageView
        android:id="@+id/iv_back_btn_search_result"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_back"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="8dp"/>
        <TextView
            android:id="@+id/tv_destination_search_result"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@id/iv_back_btn_search_result"
            android:text="JKT -> MLG"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:layout_marginStart="16dp"
            />
        <TextView
            android:id="@+id/tv_passengger_search_result"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" - 2 Penumpang - Economy"
            android:textColor="@color/white"
            app:layout_constraintStart_toEndOf="@id/tv_destination_search_result"
            app:layout_constraintTop_toTopOf="@id/tv_destination_search_result"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>