<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginTop="4dp">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="4dp">
        <TextView
            android:id="@+id/tv_seatclass_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="Economy"
            android:ellipsize="end"
            android:maxLines="2"
            android:textStyle="bold"
            android:textSize="16sp"
            app:layout_constraintEnd_toEndOf="@id/tv_seatclass_price"
            />
        <TextView
            android:id="@+id/tv_seatclass_price"
            android:layout_width="0dp"
            android:textColor="@color/md_theme_primaryContainer_mediumContrast"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/tv_seatclass_title"
            app:layout_constraintStart_toStartOf="@id/tv_seatclass_title"
            tools:text="IDR 4.950.000"
            android:textSize="16sp"
            android:layout_marginTop="4dp"/>
        <View
            android:id="@+id/v_select_seatclass"
            android:layout_width="0dp"
            android:layout_height="2dp"
            android:layout_marginVertical="8dp"
            android:background="@color/grey"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="@id/tv_seatclass_title"
            app:layout_constraintTop_toBottomOf="@id/tv_seatclass_price" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>