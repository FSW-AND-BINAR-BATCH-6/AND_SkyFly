<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="4dp"
    android:elevation="8dp"
    app:cardCornerRadius="8dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/iv_ticket_image"
            android:layout_width="0dp"
            android:layout_height="100dp"
            android:scaleType="centerCrop"
            app:layout_constraintDimensionRatio="16:9"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:src="@tools:sample/avatars"

            />
        <TextView
            android:id="@+id/tv_card_destination"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Jakarta -> Bangkok"
            app:layout_constraintStart_toStartOf="@id/iv_ticket_image"
            app:layout_constraintTop_toBottomOf="@id/iv_ticket_image"
            android:layout_marginTop="8dp"
            android:textStyle="bold"
            />
        <TextView
            android:id="@+id/tv_card_airplane"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="AirAsia"
            android:textColor="@color/md_theme_primary"
            app:layout_constraintStart_toStartOf="@id/iv_ticket_image"
            app:layout_constraintTop_toBottomOf="@id/tv_card_destination"
            android:layout_marginTop="4dp"
            android:textStyle="bold"
            />

        <TextView
            android:id="@+id/tv_card_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="20 - 30 Maret 2023"
            app:layout_constraintStart_toStartOf="@id/iv_ticket_image"
            app:layout_constraintTop_toBottomOf="@id/tv_card_airplane"
            android:layout_marginTop="4dp"
            />
        <TextView
            android:id="@+id/tv_card_start_from"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Mulai Dari"
            app:layout_constraintStart_toStartOf="@id/iv_ticket_image"
            app:layout_constraintTop_toBottomOf="@id/tv_card_date"
            android:layout_marginTop="4dp"
            />
        <TextView
            android:id="@+id/tv_card_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="IDR 950.000"
            app:layout_constraintStart_toEndOf="@id/tv_card_start_from"
            app:layout_constraintTop_toBottomOf="@id/tv_card_date"
            android:layout_marginTop="4dp"
            android:layout_marginStart="4dp"
            android:textStyle="bold"
            android:textColor="@color/md_theme_error"
            />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>