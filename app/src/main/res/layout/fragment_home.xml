<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".presentation.home.HomeFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/bg_purple_gradient"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>

        <TextView
            android:id="@+id/tv_greeting"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hei, Mau ke mana?"
            android:textStyle="bold"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:textSize="20sp"
            android:layout_margin="16dp"/>
        <androidx.cardview.widget.CardView
            android:id="@+id/cv_header"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/tv_greeting"
            app:layout_constraintStart_toStartOf="parent"
            app:cardCornerRadius="16dp"
            android:layout_margin="16dp">
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <TableLayout
                    android:id="@+id/tl_destination"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_margin="16dp">
                    <TableRow>
                        <ImageView
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:layout_gravity="center"
                            android:src="@drawable/img_airplane"/>
                        <TextView
                            android:layout_height="wrap_content"
                            android:layout_width="wrap_content"
                            android:text="From"
                            android:gravity="center"
                            android:padding="16dp"/>
                        <TextView
                            android:layout_height="wrap_content"
                            android:layout_width="wrap_content"
                            android:text="Jakarta"
                            android:gravity="center"
                            android:padding="16dp"
                            android:textStyle="bold"
                            android:layout_marginStart="16dp"/>
                    </TableRow>
                    <TableRow>
                        <ImageView
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:layout_gravity="center"
                            android:src="@drawable/img_airplane"/>
                        <TextView
                            android:layout_height="wrap_content"
                            android:layout_width="wrap_content"
                            android:text="To"
                            android:gravity="center"
                            android:padding="16dp"/>
                        <TextView
                            android:layout_height="wrap_content"
                            android:layout_width="wrap_content"
                            android:text="Jakarta"
                            android:textStyle="bold"
                            android:layout_marginStart="16dp"
                            android:gravity="center"
                            android:padding="16dp"/>
                    </TableRow>
                </TableLayout>
                <TextView
                    android:id="@+id/tv_text_pulang_pergi"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toBottomOf="@id/tl_destination"
                    app:layout_constraintStart_toStartOf="@id/tl_destination"
                    android:text="Pulang-Pergi?"
                    android:layout_marginTop="8dp"/>
                <androidx.appcompat.widget.SwitchCompat
                    android:id="@+id/btn_switch_destination"
                    android:layout_width="wrap_content"
                    android:layout_height="20dp"
                    app:layout_constraintEnd_toEndOf="@id/tl_destination"
                    app:layout_constraintTop_toTopOf="@id/tv_text_pulang_pergi"
                    app:thumbTint="@color/md_theme_primaryFixed_mediumContrast"
                    app:trackTint="@color/grey" />
                <ImageView
                    android:id="@+id/iv_departure"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:src="@drawable/ic_calendar"
                    app:layout_constraintTop_toBottomOf="@id/tv_text_pulang_pergi"
                    app:layout_constraintStart_toStartOf="@id/tv_text_pulang_pergi"
                    android:layout_marginTop="8dp"
                    />
                <TextView
                    android:id="@+id/tv_departure_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Departure"
                    android:textSize="16sp"
                    app:layout_constraintTop_toBottomOf="@id/tv_text_pulang_pergi"
                    app:layout_constraintStart_toStartOf="@id/te_departure"
                    android:layout_marginStart="4dp"/>
                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/te_departure"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    app:layout_constraintTop_toBottomOf="@id/tv_departure_title"
                    app:layout_constraintStart_toEndOf="@id/iv_departure"
                    android:hint="3 Maret 2024"/>
                <ImageView
                    android:id="@+id/iv_return"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:src="@drawable/ic_calendar"
                    app:layout_constraintTop_toBottomOf="@id/tv_text_pulang_pergi"
                    app:layout_constraintStart_toEndOf="@id/te_departure"
                    android:layout_marginTop="8dp"
                    android:layout_marginStart="8dp"
                    />
                <TextView
                    android:id="@+id/tv_return_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Return"
                    android:textSize="16sp"
                    app:layout_constraintTop_toTopOf="@id/tv_departure_title"
                    app:layout_constraintStart_toStartOf="@id/te_return"
                    android:layout_marginStart="4dp"/>
                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/te_return"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    app:layout_constraintTop_toBottomOf="@id/tv_return_title"
                    app:layout_constraintStart_toEndOf="@id/iv_return"
                    android:hint="5 Maret 2024"/>

                <ImageView
                    android:id="@+id/iv_passenger"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:src="@drawable/ic_person"
                    app:layout_constraintTop_toBottomOf="@id/te_departure"
                    app:layout_constraintStart_toStartOf="@id/iv_departure"
                    android:layout_marginTop="8dp"
                    />
                <TextView
                    android:id="@+id/tv_passenger_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Passengers"
                    android:textSize="16sp"
                    app:layout_constraintTop_toBottomOf="@id/te_departure"
                    app:layout_constraintStart_toEndOf="@id/iv_passenger"
                    android:layout_marginStart="4dp"/>
                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/te_passengers"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    app:layout_constraintTop_toBottomOf="@id/tv_passenger_title"
                    app:layout_constraintStart_toStartOf="@id/te_departure"
                    android:hint="2 Penumpang"/>

                <ImageView
                    android:id="@+id/iv_seat"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:src="@drawable/ic_seat"
                    app:layout_constraintTop_toBottomOf="@id/te_return"
                    app:layout_constraintStart_toStartOf="@id/iv_return"
                    android:layout_marginTop="8dp"
                    android:layout_marginStart="8dp"
                    />
                <TextView
                    android:id="@+id/tv_seat_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Seat Class"
                    android:textSize="16sp"
                    app:layout_constraintTop_toTopOf="@id/tv_passenger_title"
                    app:layout_constraintStart_toStartOf="@id/te_return"
                    android:layout_marginStart="4dp"/>
                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/te_seats"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    app:layout_constraintTop_toTopOf="@id/te_passengers"
                    app:layout_constraintStart_toEndOf="@id/iv_return"
                    android:hint="Ekonomi"/>

                <Button
                    android:id="@+id/btn_search_flight"
                    android:layout_width="275dp"
                    android:layout_height="wrap_content"
                    android:text="Cari Penerbangan"
                    app:layout_constraintTop_toBottomOf="@id/te_passengers"
                    android:layout_marginTop="8dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"/>
                <TextView
                    android:id="@+id/tv_destination_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Destinasi Favorit"
                    android:textStyle="bold"
                    android:textSize="20sp"
                    android:layout_marginTop="16dp"
                    app:layout_constraintStart_toStartOf="@id/rv_category"
                    app:layout_constraintTop_toBottomOf="@id/btn_search_flight"/>
                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rv_category"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="8dp"
                    android:orientation="vertical"
                    app:spanCount="2"
                    android:layout_marginStart="16dp"
                    android:layout_marginEnd="16dp"
                    app:layoutManager="androidx.recyclerview.widget.GridLayoutManager"
                    app:layout_constraintTop_toBottomOf="@id/tv_destination_title"
                    tools:listitem="@layout/layout_item_ticket_grid" />
            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.cardview.widget.CardView>

    </androidx.constraintlayout.widget.ConstraintLayout>

</FrameLayout>