<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp">

    <ImageView
        android:id="@+id/iv_edit_icon"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_marginTop="16dp"
        android:src="@drawable/ic_edit"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_edit_profile"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="16dp"
        android:padding="8dp"
        android:text="@string/text_edit_profile"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="@id/iv_edit_icon"
        app:layout_constraintStart_toEndOf="@id/iv_edit_icon"
        app:layout_constraintTop_toTopOf="@id/iv_edit_icon" />

    <View
        android:id="@+id/v_edit_profile"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="16dp"
        android:background="@color/grey"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_edit_profile" />

    <ImageView
        android:id="@+id/iv_settings_icon"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_marginTop="16dp"
        android:src="@drawable/ic_settings"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/v_edit_profile" />

    <TextView
        android:id="@+id/tv_settings_profile"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="16dp"
        android:padding="8dp"
        android:text="@string/text_settings"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="@id/iv_settings_icon"
        app:layout_constraintStart_toEndOf="@id/iv_settings_icon"
        app:layout_constraintTop_toTopOf="@id/iv_settings_icon" />

    <View
        android:id="@+id/v_settings_profile"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="16dp"
        android:background="@color/grey"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_settings_profile" />

    <ImageView
        android:id="@+id/iv_logout_icon"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_marginTop="16dp"
        android:src="@drawable/ic_logout"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/v_settings_profile" />

    <TextView
        android:id="@+id/tv_logout_profile"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="16dp"
        android:padding="8dp"
        android:text="@string/text_logout"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="@id/iv_logout_icon"
        app:layout_constraintStart_toEndOf="@id/iv_logout_icon"
        app:layout_constraintTop_toTopOf="@id/iv_logout_icon" />

    <View
        android:id="@+id/v_logout_profile"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="16dp"
        android:background="@color/grey"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_logout_profile" />

</androidx.constraintlayout.widget.ConstraintLayout>